<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/delete_shit_structure"
    android:padding="10dp">

    <View
        android:layout_width="100dp"
        android:layout_height="7dp"
        android:background="@drawable/delete_indicator_shape"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure want to delete \n
this note?"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        android:fontFamily="@font/product_sans_regular"
        android:textColor="@color/black"
        android:layout_marginBottom="7dp"/>

    <TextView
        android:id="@+id/delete_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/delete_no_button"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="No"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/delete_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/delete_yes_button"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="Yes"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        />




</LinearLayout>